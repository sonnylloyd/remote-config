{
  "compilerOptions": {
    "target": "ES6",                      // Ensure ES6+ compatibility
    "module": "CommonJS",                  // Use CommonJS for modules
    "moduleResolution": "node",            // Node.js-style module resolution
    "outDir": "./dist",                    // Output compiled files in 'dist'
    "esModuleInterop": true,               // Allow default imports from non-ES modules
    "skipLibCheck": true,                  // Skip lib checks for faster compilation
    "forceConsistentCasingInFileNames": true,  // Enforce consistent file name casing
    "strict": true,                        // Enable strict type-checking
    "resolveJsonModule": true,             // Allow imports of JSON files
    "types": ["node"],                     // Include Node.js types in the build
    "baseUrl": ".",                        // Base path for module resolution
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src"],                      // Include your source directory
  "exclude": ["node_modules", "dist"]      // Exclude 'node_modules' and 'dist'
}